<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="bibliothequePU"
                      transaction-type="RESOURCE_LOCAL">  <!-- explicit is better -->

        <class>org.example.JPA.Entites.Adresse</class>
        <class>org.example.JPA.Entites.Client</class>

        <properties>
            <!-- JDBC connection (these are standard Jakarta props) -->
            <property name="jakarta.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
            <property name="jakarta.persistence.jdbc.url"    value="jdbc:oracle:thin:@localhost:1521:XE"/>
            <property name="jakarta.persistence.jdbc.user"   value="TP1"/>
            <property name="jakarta.persistence.jdbc.password" value="QWEQWE123123"/>

            <!-- Hibernate-specific -->
            <property name="hibernate.dialect"          value="org.hibernate.dialect.OracleDialect"/>
            <property name="hibernate.hbm2ddl.auto"     value="validate"/>  <!-- good for production; use 'update' only for dev -->
            <property name="hibernate.show_sql"         value="true"/>
            <property name="hibernate.format_sql"       value="true"/>   <!-- optional: nicer output -->
            <!-- Optional: better logging integration if using SLF4J -->
            <!-- <property name="hibernate.connection.provider_class" value="..."/> not needed here -->
        </properties>
    </persistence-unit>
</persistence>